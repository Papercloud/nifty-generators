<%% title "<%= plural_name.titleize %>" %>

<ul>
  <%% for <%= instance_name %> in @<%= instances_name %> %>
    <li class="<%= instance_name %>">
      <ul>
        <%- for attribute in model_attributes -%>
          <li>
            <%= attribute.human_name.titleize %>: <%%= <%= instance_name %>.<%= attribute.name %> %></td>
          </li>
        <%- end -%>
      </ul>

      <%- if action? :show -%>
        <%%= link_to "Show", <%= item_path %> %><br/>
      <%- end -%>
      <%- if action? :edit -%>
        <%%= link_to "Edit", <%= item_path :action => :edit %> %></br>
      <%- end -%>
      <%- if action? :destroy -%>
        <%%= link_to "Destroy", <%= item_path %>, :confirm => 'Are you sure?', :method => :delete %></br>
      <%- end -%>
    </li>
  <%% end %>
</ul>

<%- if action? :new -%>
<p><%%= link_to "New <%= singular_name.titleize %>", <%= item_path :action => :new %> %></p>
<%- end -%>

<%%= paginate @<%= instances_name %> %>
